@model FreelancerPortfolioManager.Models.Facture

@{
    ViewData["Title"] = "Créer une Facture";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-plus"></i> Créer une Nouvelle Facture
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Numero" class="form-label">
                                <i class="fas fa-hashtag"></i> Numéro
                            </label>
                            <input asp-for="Numero" class="form-control" />
                            <span asp-validation-for="Numero" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DateEmission" class="form-label">
                                    <i class="fas fa-calendar"></i> Date d'émission
                                </label>
                                <input asp-for="DateEmission" class="form-control" type="date" />
                                <span asp-validation-for="DateEmission" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DateEcheance" class="form-label">
                                    <i class="fas fa-calendar-check"></i> Date d'échéance
                                </label>
                                <input asp-for="DateEcheance" class="form-control" type="date" />
                                <span asp-validation-for="DateEcheance" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MontantHT" class="form-label">
                                    <i class="fas fa-euro-sign"></i> Montant HT
                                </label>
                                <input asp-for="MontantHT" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="MontantHT" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="TauxTVA" class="form-label">
                                    <i class="fas fa-percent"></i> Taux TVA (%)
                                </label>
                                <input asp-for="TauxTVA" class="form-control" type="number" step="0.01" min="0" max="100" value="20" />
                                <span asp-validation-for="TauxTVA" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Statut" class="form-label">
                                <i class="fas fa-info-circle"></i> Statut
                            </label>
                            <select asp-for="Statut" class="form-select" asp-items="Html.GetEnumSelectList<FreelancerPortfolioManager.Models.StatutFacture>()"></select>
                            <span asp-validation-for="Statut" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FreelancerId" class="form-label">
                                    <i class="fas fa-user-tie"></i> Freelancer
                                </label>
                                <select asp-for="FreelancerId" class="form-select" asp-items="ViewBag.FreelancerId">
                                    <option value="">-- Sélectionner un freelancer --</option>
                                </select>
                                <span asp-validation-for="FreelancerId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ProjetId" class="form-label">
                                    <i class="fas fa-project-diagram"></i> Projet
                                </label>
                                <select asp-for="ProjetId" class="form-select" asp-items="ViewBag.ProjetId">
                                    <option value="">-- Sélectionner un projet --</option>
                                </select>
                                <span asp-validation-for="ProjetId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save"></i> Créer la Facture
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Retour à la liste
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .btn-lg {
        padding: 12px 24px;
        font-size: 1.1rem;
    }
</style>
