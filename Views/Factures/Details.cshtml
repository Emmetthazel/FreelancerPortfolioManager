@model FreelancerPortfolioManager.Models.Facture
@{
    ViewData["Title"] = "Détails de la Facture";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-file-invoice-dollar"></i> Facture @Model.Numero
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Numéro :</dt>
                                <dd class="col-sm-7"><strong>@Model.Numero</strong></dd>

                                <dt class="col-sm-5">Date d'émission :</dt>
                                <dd class="col-sm-7">@Model.DateEmission.ToString("dd/MM/yyyy")</dd>

                                <dt class="col-sm-5">Date d'échéance :</dt>
                                <dd class="col-sm-7">@Model.DateEcheance.ToString("dd/MM/yyyy")</dd>

                                <dt class="col-sm-5">Statut :</dt>
                                <dd class="col-sm-7">
                                    @{
                                        var statutClass = Model.Statut switch
                                        {
                                            StatutFacture.BROUILLON => "bg-secondary",
                                            StatutFacture.ENVOYEE => "bg-info",
                                            StatutFacture.PAYEE => "bg-success",
                                            StatutFacture.EN_RETARD => "bg-danger",
                                            StatutFacture.ANNULEE => "bg-dark",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statutClass">@Model.Statut</span>
                                </dd>
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Montant HT :</dt>
                                <dd class="col-sm-7">@Model.MontantHT.ToString("C")</dd>

                                <dt class="col-sm-5">TVA (@Model.TauxTVA%) :</dt>
                                <dd class="col-sm-7">@Model.MontantTVA.ToString("C")</dd>

                                <dt class="col-sm-5">Montant TTC :</dt>
                                <dd class="col-sm-7">
                                    <strong class="text-success">@Model.MontantTTC.ToString("C")</strong>
                                </dd>

                                <dt class="col-sm-5">Projet :</dt>
                                <dd class="col-sm-7">@(Model.Projet?.Titre ?? "N/A")</dd>

                                <dt class="col-sm-5">Freelancer :</dt>
                                <dd class="col-sm-7">@(Model.Freelancer?.Email ?? "N/A")</dd>
                            </dl>
                        </div>
                    </div>

                    <hr>

                    <div class="d-flex gap-2 flex-wrap">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Modifier
                        </a>

                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Retour à la liste
                        </a>

                        <button type="button" class="btn btn-danger ms-auto"
                                data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="fas fa-trash"></i> Supprimer
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmation de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle"></i> Confirmer la suppression
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer cette facture ?</p>
                <p class="text-danger"><strong>Cette action est irréversible !</strong></p>
                <p class="mb-0"><strong>Facture :</strong> @Model.Numero</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Annuler
                </button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Supprimer définitivement
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .gap-2 {
        gap: 0.5rem;
    }
</style>
