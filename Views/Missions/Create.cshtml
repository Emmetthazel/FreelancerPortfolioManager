@model FreelancerPortfolioManager.Models.Mission

@{
    ViewData["Title"] = "Créer une Mission";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-plus"></i> Créer une Nouvelle Mission
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-align-left"></i> Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DateDebut" class="form-label">
                                    <i class="fas fa-calendar-alt"></i> Date de début
                                </label>
                                <input asp-for="DateDebut" class="form-control" type="date" />
                                <span asp-validation-for="DateDebut" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DateFin" class="form-label">
                                    <i class="fas fa-calendar-check"></i> Date de fin
                                </label>
                                <input asp-for="DateFin" class="form-control" type="date" />
                                <span asp-validation-for="DateFin" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NombreHeures" class="form-label">
                                    <i class="fas fa-clock"></i> Nombre d'heures
                                </label>
                                <input asp-for="NombreHeures" class="form-control" type="number" min="1" max="1000" />
                                <span asp-validation-for="NombreHeures" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="TarifHoraire" class="form-label">
                                    <i class="fas fa-euro-sign"></i> Tarif horaire
                                </label>
                                <input asp-for="TarifHoraire" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="TarifHoraire" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProjetId" class="form-label">
                                <i class="fas fa-project-diagram"></i> Projet
                            </label>
                            <select asp-for="ProjetId" class="form-select" asp-items="ViewBag.ProjetId">
                                <option value="">-- Sélectionner un projet --</option>
                            </select>
                            <span asp-validation-for="ProjetId" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save"></i> Créer la Mission
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Retour à la liste
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .btn-lg {
        padding: 12px 24px;
        font-size: 1.1rem;
    }
</style>
