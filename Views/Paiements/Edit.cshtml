@model FreelancerPortfolioManager.Models.Paiement
@{
    ViewData["Title"] = "Modifier le Paiement";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">
                        <i class="fas fa-edit"></i> Modifier le Paiement
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Montant" class="form-label">
                                <i class="fas fa-euro-sign"></i> Montant
                            </label>
                            <input asp-for="Montant" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Montant" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DatePaiement" class="form-label">
                                <i class="fas fa-calendar"></i> Date de paiement
                            </label>
                            <input asp-for="DatePaiement" class="form-control" type="date" />
                            <span asp-validation-for="DatePaiement" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MoyenPaiement" class="form-label">
                                <i class="fas fa-credit-card"></i> Moyen de paiement
                            </label>
                            <input asp-for="MoyenPaiement" class="form-control" />
                            <span asp-validation-for="MoyenPaiement" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Reference" class="form-label">
                                <i class="fas fa-hashtag"></i> Référence
                            </label>
                            <input asp-for="Reference" class="form-control" />
                            <span asp-validation-for="Reference" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FactureId" class="form-label">
                                <i class="fas fa-file-invoice"></i> Facture
                            </label>
                            <select asp-for="FactureId" class="form-select" asp-items="ViewBag.FactureId">
                                <option value="">-- Sélectionner une facture --</option>
                            </select>
                            <span asp-validation-for="FactureId" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-save"></i> Enregistrer les Modifications
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Retour à la liste
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                                <i class="fas fa-eye"></i> Voir les détails
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .btn-lg {
        padding: 12px 24px;
        font-size: 1.1rem;
    }
</style>
