@model FreelancerPortfolioManager.Models.Client
@{
    ViewData["Title"] = "Modifier le Client";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">
                        <i class="fas fa-edit"></i> Modifier le Client
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="DateAjout" />
                        <input type="hidden" asp-for="NoteGlobale" />

                        <div class="mb-3">
                            <label asp-for="NomEntreprise" class="form-label">
                                <i class="fas fa-building"></i> Nom de l'entreprise
                            </label>
                            <input asp-for="NomEntreprise" class="form-control" />
                            <span asp-validation-for="NomEntreprise" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NomContact" class="form-label">
                                <i class="fas fa-user"></i> Nom du contact
                            </label>
                            <input asp-for="NomContact" class="form-control" />
                            <span asp-validation-for="NomContact" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope"></i> Email
                            </label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Telephone" class="form-label">
                                <i class="fas fa-phone"></i> Téléphone
                            </label>
                            <input asp-for="Telephone" class="form-control" />
                            <span asp-validation-for="Telephone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Adresse" class="form-label">
                                <i class="fas fa-map-marker-alt"></i> Adresse
                            </label>
                            <input asp-for="Adresse" class="form-control" />
                            <span asp-validation-for="Adresse" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FreelancerId" class="form-label">
                                <i class="fas fa-user-tie"></i> Freelancer
                            </label>
                            <select asp-for="FreelancerId" class="form-select" asp-items="ViewBag.FreelancerId">
                                <option value="">-- Sélectionner un freelancer --</option>
                            </select>
                            <span asp-validation-for="FreelancerId" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-save"></i> Enregistrer les Modifications
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Retour à la liste
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                                <i class="fas fa-eye"></i> Voir les détails
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .btn-lg {
        padding: 12px 24px;
        font-size: 1.1rem;
    }
</style>
