@model FreelancerPortfolioManager.Models.Evaluation

@{
    ViewData["Title"] = "Créer une Évaluation";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-plus"></i> Créer une Nouvelle Évaluation
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Note" class="form-label">
                                <i class="fas fa-star"></i> Note (1-5)
                            </label>
                            <input asp-for="Note" class="form-control" type="number" min="1" max="5" />
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Commentaire" class="form-label">
                                <i class="fas fa-comment"></i> Commentaire
                            </label>
                            <textarea asp-for="Commentaire" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Commentaire" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateEvaluation" class="form-label">
                                <i class="fas fa-calendar"></i> Date d'évaluation
                            </label>
                            <input asp-for="DateEvaluation" class="form-control" type="date" />
                            <span asp-validation-for="DateEvaluation" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ClientId" class="form-label">
                                    <i class="fas fa-building"></i> Client
                                </label>
                                <select asp-for="ClientId" class="form-select" asp-items="ViewBag.ClientId">
                                    <option value="">-- Sélectionner un client --</option>
                                </select>
                                <span asp-validation-for="ClientId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="FreelancerId" class="form-label">
                                    <i class="fas fa-user-tie"></i> Freelancer
                                </label>
                                <select asp-for="FreelancerId" class="form-select" asp-items="ViewBag.FreelancerId">
                                    <option value="">-- Sélectionner un freelancer --</option>
                                </select>
                                <span asp-validation-for="FreelancerId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save"></i> Créer l'Évaluation
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Retour à la liste
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .btn-lg {
        padding: 12px 24px;
        font-size: 1.1rem;
    }
</style>
