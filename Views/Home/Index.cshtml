@{
    ViewData["Title"] = "Tableau de Bord";
    dynamic stats = Model;
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5">
                <i class="fas fa-tachometer-alt text-primary"></i> Tableau de Bord
            </h1>
            <p class="text-muted">Bienvenue dans votre gestionnaire de portfolio</p>
        </div>
    </div>

    <!-- Statistiques principales -->
    <div class="row g-4 mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-tie fa-3x text-primary"></i>
                    </div>
                    <h2 class="mb-0">@stats.FreelancersCount</h2>
                    <p class="text-muted mb-0">Freelancers</p>
                    <a asp-controller="Freelancers" asp-action="Index" class="btn btn-sm btn-outline-primary mt-2">
                        <i class="fas fa-eye"></i> Voir
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-users fa-3x text-success"></i>
                    </div>
                    <h2 class="mb-0">@stats.ClientsCount</h2>
                    <p class="text-muted mb-0">Clients</p>
                    <a asp-controller="Clients" asp-action="Index" class="btn btn-sm btn-outline-success mt-2">
                        <i class="fas fa-eye"></i> Voir
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-project-diagram fa-3x text-info"></i>
                    </div>
                    <h2 class="mb-0">@stats.ProjetsCount</h2>
                    <p class="text-muted mb-0">Projets</p>
                    <a asp-controller="Projets" asp-action="Index" class="btn btn-sm btn-outline-info mt-2">
                        <i class="fas fa-eye"></i> Voir
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-file-invoice-dollar fa-3x text-warning"></i>
                    </div>
                    <h2 class="mb-0">@stats.FacturesCount</h2>
                    <p class="text-muted mb-0">Factures</p>
                    <a asp-controller="Factures" asp-action="Index" class="btn btn-sm btn-outline-warning mt-2">
                        <i class="fas fa-eye"></i> Voir
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques secondaires -->
    <div class="row g-4 mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body text-center">
                    <div class="mb-2">
                        <i class="fas fa-file-contract fa-2x text-secondary"></i>
                    </div>
                    <h4 class="mb-0">@stats.ContratsCount</h4>
                    <p class="text-muted mb-0 small">Contrats</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body text-center">
                    <div class="mb-2">
                        <i class="fas fa-money-bill-wave fa-2x text-success"></i>
                    </div>
                    <h4 class="mb-0">@stats.PaiementsCount</h4>
                    <p class="text-muted mb-0 small">Paiements</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body text-center">
                    <div class="mb-2">
                        <i class="fas fa-tasks fa-2x text-primary"></i>
                    </div>
                    <h4 class="mb-0">@stats.MissionsCount</h4>
                    <p class="text-muted mb-0 small">Missions</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-body text-center">
                    <div class="mb-2">
                        <i class="fas fa-star fa-2x text-warning"></i>
                    </div>
                    <h4 class="mb-0">@stats.EvaluationsCount</h4>
                    <p class="text-muted mb-0 small">Évaluations</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Informations importantes -->
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> Projets en Cours</h5>
                </div>
                <div class="card-body text-center">
                    <h2 class="display-4 text-primary">@stats.ProjetsEnCours</h2>
                    <p class="text-muted">projets actuellement en cours</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-check-circle"></i> Factures Payées</h5>
                </div>
                <div class="card-body text-center">
                    <h2 class="display-4 text-success">@stats.FacturesPayees</h2>
                    <p class="text-muted">factures payées</p>
                </div>
            </div>
        </div>
    </div>

    @if (stats.RevenuTotal > 0)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow-sm border-0 bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <div class="card-body text-center text-white">
                        <h3 class="mb-3">
                            <i class="fas fa-euro-sign"></i> Revenu Total
                        </h3>
                        <h1 class="display-4 mb-0">@stats.RevenuTotal.ToString("C")</h1>
                        <p class="mb-0 mt-2">Total des factures payées</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Liens rapides -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-bolt"></i> Actions Rapides</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Freelancers" asp-action="Create" class="btn btn-outline-primary w-100">
                                <i class="fas fa-plus"></i> Nouveau Freelancer
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Clients" asp-action="Create" class="btn btn-outline-success w-100">
                                <i class="fas fa-plus"></i> Nouveau Client
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Projets" asp-action="Create" class="btn btn-outline-info w-100">
                                <i class="fas fa-plus"></i> Nouveau Projet
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Factures" asp-action="Create" class="btn btn-outline-warning w-100">
                                <i class="fas fa-plus"></i> Nouvelle Facture
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .card-body {
        padding: 1.5rem;
    }

    h2, h4 {
        font-weight: 600;
    }
</style>
